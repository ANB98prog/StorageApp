{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Storage.WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Storage.WebApi/bin/Debug/net6.0/Storage.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Storage.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production",
                "TEMPORARY_FILES_DIR":"/home/proger/Рабочий стол/Bakaev/Projects/LocalStorage/media/temp",
                "LOCAL_STORAGE_DIR": "/home/proger/Рабочий стол/Bakaev/Projects/LocalStorage",
                "ELASTIC_URL":"http://localhost:9200",
                "ELASTIC_USER":"elastic",
                "ELASTIC_PASSWORD":"elastic",
                "TEMPORARY_FILES_REMOVE_SCHEDULE_TIME":"1:00:00",
                "TEMPORARY_FILE_MAX_AGE":"23:59:00"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "ElasticIndexer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ElasticIndexer/bin/Debug/net6.0/ElasticIndexer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ElasticIndexer",
            "stopAtEntry": false
        }
    ]
}